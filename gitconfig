[core]
	editor = vim
[diff]
	tool = vimdiff
[alias]
	url = config --get remote.origin.url
	sh = show
	cp = cherry-pick

	# branch age
	bage = for-each-ref --sort=authordate --format '%(authordate:iso) %(align:left,25)%(refname:short)%(end) %(subject)' refs/heads
[difftool]
	prompt = false
[include]
	path = ~/.gitconfig.secret
